{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "importHelpers": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true, // 跳过声明文件.d.ts的检查
    "declaration": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/types.ts"
  ]
}