{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "importHelpers": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true, 
    "inlineSources": true
  },
  "include": ["src/**/*.ts", "src/Config.js", "types/**/*.d.ts"],
  "exclude": ["node_modules", "src/types.ts"]
}
