{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "typeRoots": ["./node_modules/@types", "./src/types"], // 包含类型声明目录
    "types": ["express"], // 确保引入express的基础类型
    "importHelpers": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "paths": {
      // 将 @your-org/schemas 映射到实际路径，确保编译时包含
      "@envm/schemas/*": ["../types/src/*"]
    }
  },
  "include": ["src/**/*", "eslint.config.ts", "./bin/index.ts"]
}
