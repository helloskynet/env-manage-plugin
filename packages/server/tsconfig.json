{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["express"],
    "importHelpers": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": ["src/**/*", "eslint.config.ts", "./bin/index.ts"]
}
