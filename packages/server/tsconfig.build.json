{
  "extends": "./tsconfig.base.json", // 继承基础配置
  "compilerOptions": {
    "outDir": "../dist", // 打包输出目录（与开发区分）
    "rootDir": "./",
    "declaration": false, // 开发阶段不需要生成 .d.ts
    "sourceMap": false
  },
  "include": ["src/**/*", "./bin/index.ts", "../types/src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.dev.ts"]
}
